# .env file for backend configuration

# Your MongoDB connection string
MONGO_URL="mongodb://localhost:27017"

# The name of the database you want to use
DB_NAME="portfolio_db"

# Comma-separated list of frontend origins to allow for CORS.
# This is crucial for your React app on localhost:3000 to be able to talk to the backend.
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"
